solve_lin([
		X + 2*Y + 3*Z = 8,
		  Y  + X   = 3,
		X - 3*Y + 5*Z = 0]).

solve_lin([
		  X + 3*Y - 2*Z = 5,
		3*X + 5*Y + 6*Z = 7,
		2*X + 4*Y + 3*Z = 8]).

solve_lin([ X*2+Y=3, 3*Y-2*X=1 ]).

solve_lin([
	  X + 2*Y + 3*Z  = 9,
	2*X	-   Y +   Z  = 8,
	3*X	+       - Z  = 3]).



























